WidgetsExample:

<WidgetsExample>:
    cols: 3
    toggle_button: toggle_button
    ToggleButton:
        id: toggle_button
        text: 'ENABLE'
        on_state: root.on_toggle_button_state(self)
    Button:
        text: 'Click here'
        on_press: root.on_button_click()
        font_name: 'GOST_B.TTF'
        font_size: 40
        disabled: root.plus_or_minus
    Label:
        text: root.my_text
        font_name: 'GOST_B.TTF'
        font_size: '80'
        color: 1 , 0.5, 1, 1



<PageLayoutExample@PageLayout>:
    AnchorLayoutExample:
    BoxLayoutExample:
    MainWidget:
    GridLayoutExample:

<GridLayoutExample@GridLayout>:
    rows: 2
    Button:
        text: 'A'
    Button:
        text: 'B'
    Button:
        text: 'C'
    Button:
        text: 'D'
    Button:
        text: 'E'
    BoxLayoutExample:

<AnchorLayoutExample>:
    #right, left, center
    anchor_x: 'center'
    #right, top, center, bottom, right
    anchor_y: 'top'
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: 'A'
        Button:
            text: 'B'

<BoxLayoutExample>:
    orientation: 'horizontal'
    Button:
        text: 'A'
        # size: '40dp', '40dp'
        size_hint: 0.5, 0.5
        # height: '60dp'
        pos_hint: {'center_y': 0.5}

    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        Button:
            text: 'B1'
        Button:
            text: 'B2'
        Button:
            text: 'B3'
        Button:
            text: 'B4'
    Label:
        text: 'C'

<MainWidget>:
    Button:
        text: 'hello'
        color: 1, 0, 0, 1
    Label:
        text: 'word'
        size: '100dp', '80dp'
        pos: '200dp', '300dp'
        color: 1, 1, 0, 1

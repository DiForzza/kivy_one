GridLayoutExample:
<GridLayoutExample@GridLayout>:



<AnchorLayoutExample>:
    #right, left, center
    anchor_x: 'center'
    #right, top, center, bottom, right
    anchor_y: 'top'
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: 'A'
        Button:
            text: 'B'

<BoxLayoutExample>:
    orientation: 'horizontal'
    Button:
        text: 'A'
        # size: '40dp', '40dp'
        size_hint: 0.5, 0.5
        # height: '60dp'
        pos_hint: {'center_y': 0.5}

    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        Button:
            text: 'B1'
        Button:
            text: 'B2'
        Button:
            text: 'B3'
        Button:
            text: 'B4'
    Label:
        text: 'C'

<MainWidget>:
    Button:
        text: 'hello'
        color: 1, 0, 0, 1
    Label:
        text: 'word'
        size: '100dp', '80dp'
        pos: '200dp', '300dp'
        color: 1, 1, 0, 1

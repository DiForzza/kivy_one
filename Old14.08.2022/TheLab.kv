MultiplicationTable:
<MultiplicationTable@GridLayout>:
    rows: 3
    Label:
        size_hint: 1, 0.3
        text: root.text_tugriki
    Label:
        text: '2'
        font_size: '100dp'
    GridLayout:
        cols: 6
        Button:
            text: '1'
        Button:
            text: '2'
        Button:
            text: '3'
        Button:
            text: '4'
        Button:
            text: '5'
        Button:
            text: '6'


<ImagesExample@GridLayout>:
    cols: 3
    Image:
        source: '123.jpg'
    Image:
        source: '123.jpg'
        allow_stretch: True
    Image:
        source: '123.jpg'
        allow_stretch: True
        keep_ratio: False

<WidgetsExample>:
    cols: 4
    ToggleButton:
        text: 'ENABLE'
        on_state: root.on_toggle_button_state(self)
    Button:
        text: 'Click here'
        on_press: root.on_button_click()
        font_name: 'GOST_B.TTF'
        font_size: 40
        disabled: root.plus_or_minus
    Label:
        text: root.my_text
        font_name: 'GOST_B.TTF'
        font_size: '80'
        color: 1 , 0.5, 1, 1
    Switch:
        id: my_switch
        on_active: root.on_active(self)
        font_name: 'GOST_B.TTF'
        font_size: '80'
    Slider:
        id: my_slider
        min: 1
        max: 100
        value: 50
        on_value: root.on_value(self)
        orientation: 'vertical'
        disabled: not my_switch.active
    Label:
        text: str(int(my_slider.value))
    ProgressBar:
        max: 100
        value: my_slider.value
    TextInput:
        id: my_text_input
        size_hint: 1, 1
        width: '100dp'
        text: 'foo'
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.text_validate_str



<PageLayoutExample@PageLayout>:
    AnchorLayoutExample:
    BoxLayoutExample:
    MainWidget:
    GridLayoutExample:

<GridLayoutExample@GridLayout>:
    rows: 2
    Button:
        text: 'A'
    Button:
        text: 'B'
    Button:
        text: 'C'
    Button:
        text: 'D'
    Button:
        text: 'E'
    BoxLayoutExample:

<AnchorLayoutExample>:
    #right, left, center
    anchor_x: 'center'
    #right, top, center, bottom, right
    anchor_y: 'top'
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: 'A'
        Button:
            text: 'B'

<BoxLayoutExample>:
    orientation: 'horizontal'
    Button:
        text: 'A'
        # size: '40dp', '40dp'
        size_hint: 0.5, 0.5
        # height: '60dp'
        pos_hint: {'center_y': 0.5}

    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        Button:
            text: 'B1'
        Button:
            text: 'B2'
        Button:
            text: 'B3'
        Button:
            text: 'B4'
    Label:
        text: 'C'

<MainWidget>:
    Button:
        text: 'hello'
        color: 1, 0, 0, 1
    Label:
        text: 'word'
        size: '100dp', '80dp'
        pos: '200dp', '300dp'
        color: 1, 1, 0, 1
